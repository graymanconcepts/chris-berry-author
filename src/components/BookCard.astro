---
interface Props {
  title: string;
  description: string;
  coverImage: string;
  url: string;
}

const { title, description, coverImage, url } = Astro.props;
---

<article class="border border-gray-800 rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-blue-500 transition bg-gray-900/50 flex flex-col h-full">
  <img 
    src={coverImage} 
    alt={`Cover of ${title}`} 
    class="w-full h-64 object-cover object-center mb-4"
    loading="lazy"
  />
  <div class="flex-1 flex flex-col p-8 pb-6">
    <h3 class="text-3xl font-bold mb-3 leading-tight">
      <a href={url} class="text-sky-800 hover:text-blue-400 transition">
        {title}
      </a>
    </h3>
    <p class="text-gray-300 mb-6 line-clamp-3">{description}</p>
    <div class="mt-auto">
      <a href={url} class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-5 py-2 rounded-lg shadow transition">
        View Book
      </a>
    </div>
  </div>
</article>