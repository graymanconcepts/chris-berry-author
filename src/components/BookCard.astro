---
interface Props {
  title: string;
  description: string;
  coverImage: string;
  url: string;
}

const { title, description, coverImage, url } = Astro.props;
---

<article class="border border-gray-800 rounded-lg overflow-hidden hover:border-gray-700 transition">
  <img 
    src={coverImage} 
    alt={`Cover of ${title}`} 
    class="w-full h-64 object-cover"
  />
  <div class="p-6">
    <h3 class="text-2xl font-semibold mb-2">
      <a href={url} class="text-sky-800 hover:text-blue-300 transition">
        {title}
      </a>
    </h3>
    <p class="text-gray-300">{description}</p>
  </div>
</article>