---
import SocialIcon from './SocialIcon.astro';

const socialLinks = [
  { platform: 'facebook', url: 'https://facebook.com/yourprofile' },
  { platform: 'instagram', url: 'https://instagram.com/yourprofile' },
  { platform: 'linkedin', url: 'https://linkedin.com/in/yourprofile' },
  { platform: 'medium', url: 'https://medium.com/@yourprofile' },
  { platform: 'substack', url: 'https://yourname.substack.com' },
];
---

<footer class="bg-[#161B22] border-t border-gray-800 py-8">
  <div class="container mx-auto px-4">
    <div class="flex justify-center space-x-6">
      {socialLinks.map(({ platform, url }) => (
        <SocialIcon platform={platform} url={url} />
      ))}
    </div>
    <div class="text-center mt-4 text-gray-400">
      &copy; {new Date().getFullYear()} Chris Berry - Author. All rights reserved.
    </div>
  </div>
</footer>