---
interface Props {
  year: string;
  title: string;
  description: string;
}

const { year, title, description } = Astro.props;
---

<div class="mb-6">
  <div class="text-blue-400 font-medium mb-1">{year}</div>
  <h3 class="text-xl font-semibold mb-2">{title}</h3>
  <p class="text-gray-300">{description}</p>
</div>