---
interface Props {
  platform: string;
  description: string;
  url: string;
  icon: string;
}

const { platform, description, url, icon } = Astro.props;
---

<div class="border border-gray-800 rounded-lg p-6 hover:border-gray-700 transition">
  <div class="flex items-center mb-4">
    <span class="text-2xl mr-3" set:html={icon} />
    <h3 class="text-xl font-semibold">{platform}</h3>
  </div>
  <p class="text-gray-300 mb-4">{description}</p>
  <a
    href={url}
    target="_blank"
    rel="noopener noreferrer"
    class="text-blue-400 hover:text-blue-300 inline-flex items-center"
  >
    Read on {platform}
    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
    </svg>
  </a>
</div>