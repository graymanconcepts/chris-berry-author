---
import { format } from 'date-fns';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  url: string;
  thumbnail: string;
}

const { title, description, pubDate, url, thumbnail } = Astro.props;
---

<article class="border border-gray-800 rounded-lg overflow-hidden hover:border-gray-700 transition">
  <div class="flex flex-col md:flex-row">
    <div class="md:w-1/3">
      <img 
        src={thumbnail} 
        alt={`Thumbnail for ${title}`}
        class="w-full h-48 md:h-full object-cover"
      />
    </div>
    <div class="p-6 md:w-2/3">
      <h3 class="text-sky-800 text-2xl font-semibold mb-2">
        <a href={url} class="hover:text-blue-400">
          {title}
        </a>
      </h3>
      <time class="text-gray-400 text-sm block mb-4">
        {format(pubDate, 'MMMM d, yyyy')}
      </time>
      <p class="text-gray-300">{description}</p>
      <a 
        href={url} 
        class="inline-flex items-center mt-4 text-blue-400 hover:text-blue-300"
      >
        Read more
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </div>
</article>