---
interface Props {
  name: string;
  tagline: string;
  image: string;
}

const { name, tagline, image } = Astro.props;
---

<section class="relative w-full min-h-[60vh] flex items-center justify-center overflow-hidden bg-gradient-to-b from-gray-900 to-[#0D1117] mb-16">
  <div class="absolute inset-0 z-0">
    <img 
      src={image} 
      alt="Background" 
      class="w-full h-full object-cover object-center opacity-60 scale-105 blur-[2px]"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-black/80 via-black/40 to-transparent"></div>
  </div>
  <div class="relative z-10 w-full flex flex-col items-center justify-center px-4 py-24">
    <h1 class="text-5xl md:text-7xl font-bold mb-4 leading-tight text-center drop-shadow-xl text-white font-playfair">
      {name}
    </h1>
    <div class="w-20 h-1 bg-blue-400 rounded-full mx-auto mb-6"></div>
    <p class="text-2xl md:text-3xl text-gray-200 leading-relaxed text-center max-w-2xl mb-10 font-playfair">
      {tagline}
    </p>
    <div class="flex flex-wrap justify-center gap-6 mt-4">
      <a 
        href="/books" 
        class="inline-block bg-blue-600/90 hover:bg-blue-700 text-white px-8 py-4 rounded-xl font-semibold text-lg shadow-lg transition transform hover:scale-105"
      >
        Explore My Books
      </a>
      <a 
        href="/blog" 
        class="inline-block bg-white/10 border border-white/30 text-white px-8 py-4 rounded-xl font-semibold text-lg shadow-lg transition hover:bg-white/20 hover:text-blue-600 hover:border-blue-400 hover:scale-105"
      >
        Read the Blog
      </a>
    </div>
  </div>
</section>