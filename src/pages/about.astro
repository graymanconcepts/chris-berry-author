---
import Layout from "../layouts/Layout.astro";
import SectionHeading from "../components/SectionHeading.astro";
import Achievement from "../components/Achievement.astro";
import SocialIcon from "../components/SocialIcon.astro";
---

<Layout title="About | Chris Berry - Author">
  <div class="max-w-4xl mx-auto">
    <!-- LinkedIn-Style Hero Section -->
    <section class="relative w-full mb-20">
      <!-- Banner background -->
      <div class="w-full h-48 md:h-64 bg-gray-800 overflow-hidden">
        <img src="/images/aboutheader.jpeg" alt="About banner" class="w-full h-full object-cover object-center" />
      </div>
      <!-- Author portrait overlay -->
      <div class="absolute left-1/2 top-36 md:top-48 -translate-x-1/2 z-20">
        <img src="/images/author-photo.png" alt="Chris Berry portrait" class="w-40 h-40 md:w-52 md:h-52 object-cover object-top rounded-full border-8 border-blue-400 shadow-2xl bg-gray-900" />
      </div>
      <!-- Content below -->
      <div class="flex flex-col items-center justify-center px-4 pt-32 md:pt-40 pb-10">
        <h1 class="text-5xl md:text-6xl font-extrabold text-white font-playfair drop-shadow-xl mb-2 tracking-tight text-center">Chris Berry</h1>
        <div class="text-xl md:text-2xl text-blue-200 font-semibold mb-6 text-center">Author • Technologist • Storyteller</div>
        <div class="max-w-2xl mx-auto text-center text-lg text-gray-200 font-medium mb-6">
          From small-town roots to the front lines of technology and fiction, I create stories and experiences that challenge, inspire, and entertain.
        </div>
        <div class="w-20 h-1 bg-blue-400 rounded-full mb-6"></div>
        <div class="max-w-xl mx-auto bg-blue-900/70 border-l-4 border-blue-400 p-6 rounded-lg shadow text-blue-100 text-xl italic">
          "Whether writing, taking photographs, or creating digital art, I am constantly exploring new ways to express myself and connect with others through my artistic and storytelling abilities."
        </div>
      </div>
    </section>
  </div>

