---
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title="Blog | Chris Berry - Author">
  <div class="relative bg-gradient-to-b from-gray-900 to-[#0D1117] mb-16">
    <div class="absolute inset-0 overflow-hidden">
      <img 
        src="/images/hero-background.jpg" 
        alt="Blog header" 
        class="w-full h-full object-cover opacity-45"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-black to-transparent"></div>
    </div>
    
    <div class="relative max-w-4xl mx-auto px-4 py-20">
      <h1 class="text-5xl font-bold mb-6">Tips, Tricks and Insights</h1>
      <p class="text-xl text-gray-300">
        Things I've learned during my journey as a storyteller.
      </p>
    </div>
  </div>

  <div class="max-w-4xl mx-auto px-4">
    <div class="space-y-8">
      {sortedPosts.map(post => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          url={`/blog/${post.slug}`}
          thumbnail={post.data.thumbnail}
        />
      ))}
    </div>
  </div>
</Layout>